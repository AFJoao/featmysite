rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Coleção de usuários - PERMISSIVO
    match /users/{userId} {
      // Qualquer um pode ler (necessário para código de referência)
      allow read: if true;
      
      // Criar: qualquer usuário autenticado
      allow create: if request.auth != null;
      
      // Atualizar: próprio usuário OU qualquer personal (para lista de alunos)
      allow update: if request.auth != null;
      
      // Deletar: apenas próprio usuário
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Coleção de exercícios - PERMISSIVO
    match /exercises/{exerciseId} {
      // Qualquer um autenticado pode ler
      allow read: if request.auth != null;
      
      // Qualquer um autenticado pode criar
      allow create: if request.auth != null;
      
      // Qualquer um autenticado pode atualizar/deletar
      allow update, delete: if request.auth != null;
    }

    // Coleção de treinos - TOTALMENTE PERMISSIVO
    match /workouts/{workoutId} {
      // Qualquer um autenticado pode fazer tudo
      allow read, write: if request.auth != null;
    }

    // Coleção de conclusões de treinos
    match /workoutCompletions/{completionId} {
      // Leitura: apenas o próprio usuário ou personal vinculado
      allow read: if request.auth != null && 
                     (completionId.matches(request.auth.uid + '_.*') || 
                      get(/databases/$(database)/documents/workouts/$(completionId.split('_')[1])).data.personalId == request.auth.uid);
      
      // Escrita: apenas o próprio usuário (aluno marcando exercícios)
      allow create, update: if request.auth != null && 
                               completionId.matches(request.auth.uid + '_.*') &&
                               request.resource.data.userId == request.auth.uid;
      
      // Deletar: apenas o próprio usuário
      allow delete: if request.auth != null && 
                       completionId.matches(request.auth.uid + '_.*');
    }

    // ==========================================
    // Coleção de templates de treino - NOVA
    // ==========================================
    match /workoutTemplates/{templateId} {
      // Leitura: apenas o próprio personal que criou
      allow read: if request.auth != null && 
                     resource.data.personalId == request.auth.uid;
      
      // Criar: apenas personal autenticado (deve incluir seu próprio UID)
      allow create: if request.auth != null && 
                       request.resource.data.personalId == request.auth.uid;
      
      // Atualizar: apenas o próprio personal que criou
      allow update: if request.auth != null && 
                       resource.data.personalId == request.auth.uid;
      
      // Deletar: apenas o próprio personal que criou
      allow delete: if request.auth != null && 
                       resource.data.personalId == request.auth.uid;
    }

    // Negar acesso padrão a outras coleções
    match /{document=**} {
      allow read, write: if false;
    }
  }
}