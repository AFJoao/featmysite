rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Coleção de usuários
    match /users/{userId} {
      // IMPORTANTE: Permitir leitura de Personals mesmo sem autenticação
      // (necessário para validar código de referência no cadastro)
      allow read: if resource.data.userType == 'personal';
      
      // Usuário autenticado pode ler qualquer usuário
      allow read: if request.auth != null;
      
      // Usuário pode escrever apenas seus próprios dados
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Permitir que Personals atualizem a lista de students
      allow update: if request.auth != null && 
                       (request.auth.uid == userId || 
                        resource.data.userType == 'personal');
    }

    // Coleção de exercícios
    match /exercises/{exerciseId} {
      // Qualquer usuário autenticado pode ler
      allow read: if request.auth != null;
      
      // Criar: apenas se o createdBy for o próprio usuário
      allow create: if request.auth != null && 
                       request.resource.data.createdBy == request.auth.uid;
      
      // Atualizar/Deletar: apenas o criador
      allow update, delete: if request.auth != null && 
                               resource.data.createdBy == request.auth.uid;
    }

    // Coleção de treinos
    match /workouts/{workoutId} {
      // Ler: Personal que criou OU aluno atribuído
      allow read: if request.auth != null && 
                     (resource.data.personalId == request.auth.uid || 
                      resource.data.studentId == request.auth.uid);
      
      // Criar: apenas se o personalId for o próprio usuário
      allow create: if request.auth != null && 
                       request.resource.data.personalId == request.auth.uid;
      
      // Atualizar/Deletar: apenas o Personal que criou
      allow update, delete: if request.auth != null && 
                               resource.data.personalId == request.auth.uid;
    }

    // Negar acesso padrão a outras coleções
    match /{document=**} {
      allow read, write: if false;
    }
  }
}