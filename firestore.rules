rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Coleção de usuários - PERMISSIVO
    match /users/{userId} {
      // Qualquer um pode ler (necessário para código de referência)
      allow read: if true;
      
      // Criar: qualquer usuário autenticado
      allow create: if request.auth != null;
      
      // Atualizar: próprio usuário OU qualquer personal (para lista de alunos)
      allow update: if request.auth != null;
      
      // Deletar: apenas próprio usuário
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Coleção de exercícios - PERMISSIVO
    match /exercises/{exerciseId} {
      // Qualquer um autenticado pode ler
      allow read: if request.auth != null;
      
      // Qualquer um autenticado pode criar
      allow create: if request.auth != null;
      
      // Qualquer um autenticado pode atualizar/deletar (vamos restringir depois)
      allow update, delete: if request.auth != null;
    }

    // Coleção de treinos - TOTALMENTE PERMISSIVO PARA TESTE
    match /workouts/{workoutId} {
      // Qualquer um autenticado pode fazer tudo
      allow read, write: if request.auth != null;
    }

    // Negar acesso padrão a outras coleções
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

// NOTA: Estas regras são PERMISSIVAS para teste.
// Depois que tudo funcionar, vamos restringir novamente.